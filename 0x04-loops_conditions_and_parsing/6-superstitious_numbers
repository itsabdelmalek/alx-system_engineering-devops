#!/usr/bin/env bash
# This script displays numbers from 1 to 20 and corresponding bad luck messages based on the loop iteration.

count=1

while [ $count -le 20 ]; do
  case $count in
    4)
      echo "4 and then bad luck from China"
      ;;
    9)
      echo "9 and then bad luck from Japan"
      ;;
    17)
      echo "17 and then bad luck from Italy"
      ;;
    *)
      echo $count
      ;;
  esac
  ((count++))
done
